<link rel="stylesheet" href="css/matchList.css">
<div class="playlist">
  <div class="container" href="/mview_display?match_id=<%=match.id%>">
    <!--Video Thumbnail------------------------------------------------------->
    <div class="videobtn">

      <img src="<%=match.thumbnail%>" alt="" width="100%">

    </div>
    <!--Video Details------------------------------------------------------->
    <a href="/mview_display?match_id=<%=match.id%>">
    <div class="viddetails">
      <!--Video Name and Date------------------------------------------------------->
      <div class="row">
        
        <h3>
          <%=match.title%>
        </h3>
        
        <br>
        <p>
          <%=match.createdAt%>
        </p>
      </div>
      <!--Video Descriptions------------------------------------------------------->
      <div class="row">
        <p>
          <%=match.description%>
        </p>
      </div>
      <!--btns------------------------------------------------------->
      <div class="row">
        <div class="btnsgrp">
          <button class="editbtn"><a href="/editmatch?match_id=<%=match.id%>">
              Edit</a></button>
          <form action="/deletematch/ <%=match.id%>" method="post">
            <button class="delbtn">
              Delete</button>
          </form>
        </div>
      </div>
    </div>
    </a>
  </div>
</div>
