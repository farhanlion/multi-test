<link rel="stylesheet" href="css/navbar.css">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="logo.png" alt="" width="150" height="75">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <!-- home -->
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>

        <!-- upload -->
        <li class="nav-item">
          <a class="nav-link" href="/upload">Upload</a>
        </li>

        <!-- search -->
        <li class="nav-item">
          <form class="d-flex" action="/search" method="get">
            <input class="form-control me-2 rounded-pill search" id="search" type="search" placeholder="Search"
              name="keyword" aria-label="Search">
            <div id="searchprompts"></div>
            <button class="btn btn-outline-light rounded-pill" type="submit">Search</button>
          </form>
        </li>
        <script src="/jquery/jquery.min.js"></script>
        <script src="js/search.js"></script>
      </ul>
      <%if (!user){%>
        <a href="/login"><button type="button" class="btn btn-warning rounded-pill">Login</button> </a>
        <%} else {%>
          <div class="dropdown">
            <button class="dropbtn"><img src="<%=user.user_icon%>" alt="profile img" width="35">
              <%=user.username%>
            </button>
            <div class="dropdown-content">
              <a href="/profile">My Videos</a>
              <a href="#">Edit Profile</a>
              <form action="/logout" method="POST" id="logoutForm">
                <button type="submit">Sign Out</button>
              </form>
            </div>
          </div>
          <%}%>

    </div>
  </div>
</nav>
